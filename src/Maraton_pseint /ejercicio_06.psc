Algoritmo ejercicio_06
    //Digita la cantidad
	
    //var
    Definir dias, segundos Como Entero;
	
    //Solicitar
    Escribir "Digita la cantidad de días:";
    Leer dias;
	
    segundos <- dias * 86400;
	
    //salida
    Escribir "La cantidad de segundos que fueron: ", segundos;
FinAlgoritmo
